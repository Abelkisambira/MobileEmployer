<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- App Logo -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/black"
            android:layout_gravity="center"
            android:padding="8dp"/>
    </androidx.cardview.widget.CardView>

    <!-- App Name -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/cyan"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

    <!-- App Description -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Mobile Employer app is your go-to solution for efficiently connecting skilled professionals with service seekers. This streamlined mobile application simplifies the process of finding and hiring professionals for various services, creating a seamless experience for both employers and skilled workers."
            android:textSize="16sp"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Contact Information -->
    <TextView
        android:id="@+id/contactInfoHeading"
        style="@style/AboutUsHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Information"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailTextView"
            style="@style/AboutUsDetail"
            android:text="Email: info@mobileemployer.com"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/phoneTextView"
            style="@style/AboutUsDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: +1 (123) 456-7890"/>
    </androidx.cardview.widget.CardView>

    <!-- Other Details -->
    <TextView
        android:id="@+id/otherDetailsHeading"
        style="@style/AboutUsHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App Version"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/versionTextView"
            style="@style/AboutUsDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version: 1.0"/>
    </androidx.cardview.widget.CardView>

    <!-- Add more details as needed -->

</LinearLayout>

